---
interface Props {
  title: string;
  space?: string;
}

const { title, space } = Astro.props;

const marginBottom= space ? `mb-${space}` : "mb-20";

---

<div class=`flex gap-4 items-center ${marginBottom}`>
  <div class="w-[50px] h-[1px] bg-[#8790af]"></div>
  <h3 class="text-[#8790af] font-medium">
    {title}
  </h3>
  <div class="w-[50px] h-[1px] bg-[#8790af]"></div>
</div>
